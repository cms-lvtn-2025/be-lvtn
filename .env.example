# ==============================================
# BACKEND GATEWAY CONFIGURATION
# ==============================================

# Server
PORT=8081
GIN_MODE=release

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8081/api/v1/auth/google/callback

# ==============================================
# MICROSERVICES ENDPOINTS (gRPC)
# ==============================================

SERVICE_USER=localhost:5001
SERVICE_ACADEMIC=localhost:5002
SERVICE_THESIS=localhost:5003
SERVICE_FILE=localhost:5004
SERVICE_COUNCIL=localhost:5005
SERVICE_ROLE=localhost:5006

# Docker deployment (uncomment khi d√πng docker-compose)
# SERVICE_USER=user-service:5001
# SERVICE_ACADEMIC=academic-service:5002
# SERVICE_THESIS=thesis-service:5003
# SERVICE_FILE=file-service:5004
# SERVICE_COUNCIL=council-service:5005
# SERVICE_ROLE=role-service:5006

# ==============================================
# REDIS CONFIGURATION
# ==============================================

# Redis Cache (for application caching)
REDIS_CACHE_HOST=localhost
REDIS_CACHE_PORT=6379
REDIS_CACHE_DB=0
REDIS_CACHE_PASSWORD=

# Docker deployment
# REDIS_CACHE_HOST=redis-cache

# Redis Queue (for BullMQ job processing)
REDIS_QUEUE_HOST=localhost
REDIS_QUEUE_PORT=6380
REDIS_QUEUE_DB=0
REDIS_QUEUE_PASSWORD=

# Docker deployment
# REDIS_QUEUE_HOST=redis-queue
# REDIS_QUEUE_PORT=6379

# ==============================================
# MINIO CONFIGURATION (Object Storage)
# ==============================================

MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# Docker deployment
# MINIO_ENDPOINT=minio:9000

# Minio Buckets
MINIO_BUCKET_AVATARS=avatars
MINIO_BUCKET_DOCUMENTS=documents
MINIO_BUCKET_THESIS=thesis
MINIO_BUCKET_ACADEMIC=academic

# ==============================================
# DATABASE CONFIGURATION (per service)
# ==============================================

# User Service Database
USER_DB_HOST=localhost
USER_DB_PORT=3306
USER_DB_NAME=user_db
USER_DB_USER=root
USER_DB_PASSWORD=password

# Academic Service Database
ACADEMIC_DB_HOST=localhost
ACADEMIC_DB_PORT=3306
ACADEMIC_DB_NAME=academic_db
ACADEMIC_DB_USER=root
ACADEMIC_DB_PASSWORD=password

# Thesis Service Database
THESIS_DB_HOST=localhost
THESIS_DB_PORT=3306
THESIS_DB_NAME=thesis_db
THESIS_DB_USER=root
THESIS_DB_PASSWORD=password

# File Service Database
FILE_DB_HOST=localhost
FILE_DB_PORT=3306
FILE_DB_NAME=file_db
FILE_DB_USER=root
FILE_DB_PASSWORD=password

# Council Service Database
COUNCIL_DB_HOST=localhost
COUNCIL_DB_PORT=3306
COUNCIL_DB_NAME=council_db
COUNCIL_DB_USER=root
COUNCIL_DB_PASSWORD=password

# Role Service Database
ROLE_DB_HOST=localhost
ROLE_DB_PORT=3306
ROLE_DB_NAME=role_db
ROLE_DB_USER=root
ROLE_DB_PASSWORD=password

# ==============================================
# CORS CONFIGURATION
# ==============================================

CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Authorization

# ==============================================
# FILE UPLOAD LIMITS
# ==============================================

MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# ==============================================
# LOGGING
# ==============================================

LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, text

# ==============================================
# RATE LIMITING
# ==============================================

RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60  # seconds
